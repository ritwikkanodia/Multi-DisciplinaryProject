<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#039BE5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="?actionBarSize"
                android:padding="@dimen/appbar_padding"
                android:text="@string/app_name"
                android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                tools:layout_conversion_absoluteHeight="59dp"
                tools:layout_conversion_absoluteWidth="229dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <Button
                android:id="@+id/bluetoothButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="100dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/design_default_color_primary"
                android:foreground="@android:drawable/stat_sys_data_bluetooth" />

            <Button
                android:id="@+id/mapInfoButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="#000000"
                android:foreground="@drawable/ic_map_info" />

        </androidx.appcompat.widget.Toolbar>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="1219dp">

            <view
                android:id="@+id/mapView"
                class="com.mdp.mdpandroidfinal2.ui.main.GridMap"
                android:layout_width="321dp"
                android:layout_height="421dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.02" />

            <Button
                android:id="@+id/f1ActionButton"
                android:layout_width="70dp"
                android:layout_height="32dp"
                android:layout_marginStart="149dp"
                android:layout_marginLeft="149dp"
                android:layout_marginEnd="9dp"
                android:layout_marginRight="9dp"
                android:layout_marginBottom="68dp"
                android:clickable="true"
                android:contentDescription="F1"
                android:focusable="true"
                android:text="F1"
                app:layout_constraintBottom_toTopOf="@+id/robotStatusTitleTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/configureButton" />

            <Button
                android:id="@+id/f2ActionButton"
                android:layout_width="64dp"
                android:layout_height="38dp"
                android:layout_marginStart="17dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="9dp"
                android:layout_marginRight="9dp"
                android:clickable="true"
                android:contentDescription="F2"
                android:focusable="true"
                android:text="F2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/mapView"
                app:layout_constraintTop_toBottomOf="@+id/f1ActionButton" />

            <Button
                android:id="@+id/configureButton"
                android:layout_width="138dp"
                android:layout_height="42dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="4dp"
                android:text="@string/configure"
                app:layout_constraintBottom_toTopOf="@+id/setWaypointToggleBtn"
                app:layout_constraintStart_toStartOf="parent" />

            <ToggleButton
                android:id="@+id/setStartPointToggleBtn"
                android:layout_width="72dp"
                android:layout_height="59dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textAlignment="center"
                android:textOff="SET STARTPOINT"
                android:textOn="CANCEL"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="6dp" />

            <Button
                android:id="@+id/resetMapBtn"
                android:layout_width="52dp"
                android:layout_height="49dp"
                android:layout_marginTop="324dp"
                android:layout_marginBottom="103dp"
                android:text="RESET MAP"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/robotStatusTitleTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.976"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <Button
                android:id="@+id/calibrateButton"
                android:layout_width="130dp"
                android:layout_height="33dp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginEnd="42dp"
                android:layout_marginRight="42dp"
                android:clickable="true"
                android:text="CALIBRATE"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/f2ActionButton"
                app:layout_constraintStart_toEndOf="@+id/configureButton"
                tools:layout_editor_absoluteY="443dp" />

            <Button
                android:id="@+id/updateButton"
                android:layout_width="84dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:text="UPDATE"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.47"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/manualAutoToggleBtn" />

            <ImageButton
                android:id="@+id/directionChangeImageBtn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:scaleType="fitCenter"
                android:tint="@color/colorBlack"
                app:layout_constraintStart_toEndOf="@+id/obstacleImageBtn"
                app:layout_constraintTop_toBottomOf="@+id/updateButton"
                app:srcCompat="@drawable/directionpic" />

            <ToggleButton
                android:id="@+id/setWaypointToggleBtn"
                android:layout_width="78dp"
                android:layout_height="68dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="28dp"
                android:textAlignment="center"
                android:textOff="SET WAYPOINT"
                android:textOn="CANCEL"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/setStartPointToggleBtn"
                app:layout_constraintVertical_bias="0.391" />

            <TextView
                android:id="@+id/xAxisTextView"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/colorRed"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/xLabelTextView"
                app:layout_constraintTop_toBottomOf="@+id/yAxisTextView" />

            <ImageButton
                android:id="@+id/obstacleImageBtn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="26dp"
                android:layout_marginRight="26dp"
                android:layout_marginBottom="554dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/clearImageBtn"
                app:layout_constraintTop_toBottomOf="@+id/manualAutoToggleBtn"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_arrow_error" />

            <ImageButton
                android:id="@+id/clearImageBtn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toTopOf="@+id/obstacleImageBtn"
                app:layout_constraintEnd_toStartOf="@+id/obstacleImageBtn"
                app:layout_constraintStart_toEndOf="@+id/exploredImageBtn"
                app:layout_constraintTop_toBottomOf="@+id/manualAutoToggleBtn"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_clear" />

            <ImageButton
                android:id="@+id/rightImageBtn"
                android:layout_width="40dp"
                android:layout_height="33dp"
                android:layout_marginStart="33dp"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="76dp"
                android:layout_marginRight="76dp"
                android:layout_marginBottom="58dp"
                app:layout_constraintBottom_toTopOf="@+id/phoneTiltSwitch"
                app:layout_constraintEnd_toStartOf="@+id/manualAutoToggleBtn"
                app:layout_constraintStart_toEndOf="@+id/leftImageBtn"
                app:layout_constraintTop_toBottomOf="@+id/forwardImageBtn"
                app:srcCompat="@drawable/ic_arrow_move_right" />

            <ImageButton
                android:id="@+id/exploredImageBtn"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_marginStart="240dp"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="541dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/clearImageBtn"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/manualAutoToggleBtn"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_check" />

            <Switch
                android:id="@+id/manualAutoToggleBtn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:paddingRight="150dp"
                android:switchPadding="-220dp"
                android:text="MANUAL"
                android:textAlignment="center"
                android:textOff="@string/manual"
                android:textOn="@string/auto"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.478" />

            <Switch
                android:id="@+id/phoneTiltSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="553dp"
                android:splitTrack="false"
                android:text="TILT OFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.086"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/backImageBtn" />


            <ImageButton
                android:id="@+id/backImageBtn"
                android:layout_width="41dp"
                android:layout_height="36dp"
                android:layout_marginTop="68dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.172"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/forwardImageBtn"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_arrow_move_backward" />

            <ImageButton
                android:id="@+id/leftImageBtn"
                android:layout_width="32dp"
                android:layout_height="36dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="111dp"
                android:layout_marginEnd="52dp"
                android:layout_marginRight="52dp"
                android:layout_marginBottom="44dp"
                app:layout_constraintBottom_toTopOf="@+id/phoneTiltSwitch"
                app:layout_constraintEnd_toStartOf="@+id/rightImageBtn"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mapView"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_arrow_move_left" />

            <ImageButton
                android:id="@+id/forwardImageBtn"
                android:layout_width="43dp"
                android:layout_height="43dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.168"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.412"
                app:srcCompat="@drawable/ic_arrow_move_forward" />

            <TextView
                android:id="@+id/directionLabelTextView"
                android:layout_width="77dp"
                android:layout_height="41dp"
                android:layout_marginStart="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="Direction :"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/directionAxisTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/mapView"
                app:layout_constraintTop_toBottomOf="@+id/xAxisTextView" />

            <TextView
                android:id="@+id/directionAxisTextView"
                android:layout_width="64dp"
                android:layout_height="40dp"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginBottom="177dp"
                android:gravity="center"
                android:text="None"
                android:textAlignment="center"
                android:textColor="@color/colorRed"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/robotStatusTitleTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/mapView"
                app:layout_constraintTop_toBottomOf="@+id/directionLabelTextView" />


            <TextView
                android:id="@+id/yLabelTextView"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginStart="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="51dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:text="Y:"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/xLabelTextView"
                app:layout_constraintEnd_toStartOf="@+id/yAxisTextView"
                app:layout_constraintStart_toEndOf="@+id/mapView"
                app:layout_constraintTop_toBottomOf="@+id/setStartPointToggleBtn" />

            <TextView
                android:id="@+id/xLabelTextView"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="X:"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/mapView"
                app:layout_constraintTop_toBottomOf="@+id/yLabelTextView" />

            <TextView
                android:id="@+id/robotStatusTextView"
                android:layout_width="112dp"
                android:layout_height="55dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="#DBD8D4"
                android:gravity="center"
                android:scrollbars="vertical"
                android:text="Not Available"
                android:textAlignment="center"
                android:textColor="@color/colorRed"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/robotStatusTitleTextView" />

            <TextView
                android:id="@+id/robotStatusTitleTextView"
                android:layout_width="65dp"
                android:layout_height="22dp"
                android:layout_marginTop="476dp"
                android:layout_marginEnd="56dp"
                android:layout_marginRight="56dp"
                android:background="#039BE5"
                android:gravity="center_horizontal"
                android:text="Robot Status"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/yAxisTextView"
                android:layout_width="44dp"
                android:layout_height="35dp"
                android:layout_marginTop="51dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center_horizontal"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/colorRed"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/xAxisTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/yLabelTextView"
                app:layout_constraintTop_toBottomOf="@+id/setStartPointToggleBtn" />

